function drawRectangle(width, height, color){
    var rect = new Rectangle(width, height);
    rect.setPosition((getWidth()/2)-60, (getHeight()/2)-175);
    rect.setColor(color);
    add(rect);
}

function  drawCircle(radius, colors, offset){
    var circle = new Circle(radius);
    circle.setColor(colors);
    circle.setPosition(getWidth()/2, ((getHeight()/2) + offset));
    add(circle);
}
