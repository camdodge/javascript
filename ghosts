// Constants for main ghost body
var HEAD_RADIUS = 35;
var BODY_WIDTH = HEAD_RADIUS * 2;
var BODY_HEIGHT = 60;
var NUM_FEET = 3;
var FOOT_RADIUS = (BODY_WIDTH) / (NUM_FEET * 2); 

// Constants for eyes
var PUPIL_RADIUS = 4;
var PUPIL_LEFT_OFFSET = 8;
var PUPIL_RIGHT_OFFSET = 20;
var EYE_RADIUS = 10;
var EYE_OFFSET = 14;

/* This program will create a series of ghost images on the screen */
function start(){

	var cx = getWidth()/2;
        var cy = getHeight()/2;
        drawGhost(cx, cy, Color.red);
        drawGhost(100,100, Color.green);
        drawGhost(300, 200, Color.black);
        drawGhost(40, 300, Color.orange);
        drawGhost(300, 50, Color.yellow);
	
}

function drawGhost(cx, cy, color){
	 drawRectangle(BODY_WIDTH, BODY_HEIGHT, Body_Color);
	
}

